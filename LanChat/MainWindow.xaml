<Window x:Class="LanChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        xmlns:local="clr-namespace:LanChat"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="200" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalContentAlignment="Center" Content="Enter username"></Label>
        <TextBox Grid.Row="1" Margin="10,2,10,2" Style="{StaticResource MaterialDesignTextBox}" VerticalAlignment="Center"></TextBox>
        <Button Background="#009688" Content="Connect" Grid.Row="2" Margin="10,2,10,2" Style="{StaticResource MaterialDesignRaisedButton}" VerticalAlignment="Center" Click="Login"></Button>
    </Grid>
</Window>
